<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="terminal" namespace="/terminal" extends="struts-default">

        <global-results>
            <result name="login">/pages/loginTerminal.jsp</result>
        </global-results>

        <action name="Exit" class="com.batyrov.ps.action.Exit">
            <result name="success">/pages/loginTerminal.jsp</result>
        </action>

        <action name="main">
            <result>/pages/terminal/main.jsp</result>
        </action>
    </package>
</struts>