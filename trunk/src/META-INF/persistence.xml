<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
    <persistence-unit name="aaa" transaction-type="RESOURCE_LOCAL">
        <!--<provider>oracle.toplink.essentials.PersistenceProvider</provider>-->
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.batyrov.ps.bean.AbonentPayment</class>
        <class>com.batyrov.ps.bean.Dealer</class>
        <class>com.batyrov.ps.bean.DealerPayment</class>
        <class>com.batyrov.ps.bean.Point</class>
        <class>com.batyrov.ps.bean.PointPayment</class>
        <class>com.batyrov.ps.bean.Provider</class>
        <class>com.batyrov.ps.bean.User</class>
        <class>com.batyrov.ps.bean.Key</class>
        <class>com.batyrov.ps.bean.DealerUser</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.connection.username" value="ps" />
            <property name="hibernate.connection.password" value="12345" />
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/ps"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.show_sql" value="true" />
            <!--<property name="hibernate.connection.autocommit" value="false" />
            <property name="hibernate.format_sql" value="false"  />
            <property name="hibernate.order_updates" value="true"/>
            <property name="hibernate.connection.pool_size" value="30" />
            <property name="hibernate.jdbc.batch_size" value="20"/>-->
        </properties>
    </persistence-unit>
</persistence>
