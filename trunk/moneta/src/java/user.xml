<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<!-- Author: sulic -->

<struts>
    <!-- Add your configuration elements here -->
    <package name="user" namespace="/user" extends="struts-default">

        <interceptors>
            <interceptor name="initem" class="com.rsc.moneta.interceptor.InitEntityManager"/>
            <interceptor name="auth" class="com.rsc.moneta.interceptor.AASInterceptor"/>
            <interceptor-stack name="main">
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="initem"/>
                <interceptor-ref name="auth"/>
             </interceptor-stack>
        </interceptors>

        <default-interceptor-ref name="main" />

        <default-action-ref name="ViewUserAccountsList" />
        <global-results>
            <result name="login" type="redirectAction">../public/LoginForm</result>
        </global-results>        

        <action name="ViewUserAccountsList" class="com.rsc.moneta.action.ViewUserAccountsList">
            <result>/pages/user/viewUserAccountsList.jsp</result>
        </action>

       
    </package>
</struts>
