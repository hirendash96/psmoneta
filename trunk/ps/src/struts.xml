<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <constant name="struts.url.includeParams" value="get" />
    <package name="main" namespace="/" extends="struts-default" >

        <default-interceptor-ref name="defaultStack" />       

        <action name="Exit" class="com.batyrov.ps.action.Exit">
            <result name="success" type="redirectAction">loginDealer</result>
        </action>

        <action name="loginDealer">
            <result>/pages/loginDealer.jsp</result>
        </action>

        <action name="loginTerminal">
            <result>/pages/loginTerminal.jsp</result>
        </action>

        <action name="loginDealerSubmit" class="com.batyrov.ps.action.LoginDealerSubmit">
            <result name="error" type="redirectAction">loginDealer</result>
            <result name="dealer" type="redirectAction">/dealer/ViewPointList</result>
        </action>

        <action name="loginTerminalSubmit" class="com.batyrov.ps.action.LoginTerminalSubmit">
            <result name="error" type="redirectAction">loginTerminal</result>
            <result name="terminal" type="redirectAction">/terminal/main</result>
        </action>
    
    </package>

    <include file="dealer.xml"/>
    <include file="terminal.xml"/>
</struts>